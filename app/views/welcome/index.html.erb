<h1>Welcome to my Travel Site</h1>
<p>Stay tuned for cool travel stuff!</p>

<h2> My Home State is <%= @homestate %> </h2>

<ul>
<% @countries.each do |country| %>
    <li><%= country %><br> <%= image_tag country, alt: "Country Flag", class: "flag" %> </li>
<% end %>
</ul>



<% @images.each do |image| %>
  <%= image_tag image, class: "img-responsive image-fix"%>
<% end %>

<br>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>
